<?php
    $a = 0;
   function Primo($num, $a){
        for($i=2;$i<$num;$i++){
            if($num % $i == 0){
                $a = 1;
                }
        }
        if($a == 1){
            print("$num não é primo!\n");
            } else {
                print("$num é primo!\n");
            }
    }
    do{
    $num = readline("Escolha um número: ");
    Primo($num, $a);
    }while($num > 2);
